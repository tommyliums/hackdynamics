{
  "params": {
    "query_string": "##query_string##",
    "query_size": "##result_count##"
  },
  "inline": {
    "from": 0,
    "size": "{{query_size}}",
    "query": {
      "bool": {
        "must": {
          "function_score": {
            "score_mode": "sum",
            "functions": [
            ],
            "boost_mode": "sum",
            "query": {
              "bool": {
                "must": {
                  "multi_match": {
                    "query": "{{query_string}}",
                    "type": "cross_fields",
                    "fields": [ "Q_##field_suffix##^6", "A_##field_suffix##^2", "Type_##field_suffix##", "Url", "Keyword_##field_suffix##^4" ],
                    "minimum_should_match": "2<80% 4<70% 9<50%"
                  }
                },

                "should": [
                  {
                    "match": {
                      "Q_##field_suffix##": {
                        "query": "{{query_string}}",
                        "boost": 10
                      }
                    }
                  },
                  {
                    "match": {
                      "A_##field_suffix##": {
                        "query": "{{query_string}}",
                        "boost": 3
                      }
                    }
                  },
                  {
                    "match_phrase": {
                      "Q_##field_suffix##": {
                        "query": "{{query_string}}",
                        "slop": 2,
                        "boost": 20
                      }
                    }
                  },
                  {
                    "match_phrase": {
                      "A_##field_suffix##": {
                        "query": "{{query_string}}",
                        "slop": 3,
                        "boost": 5
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}